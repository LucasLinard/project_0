<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tech.linard.android.meuportfolio.MainActivity">

    <TextView
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:id="@+id/my_nanodegree_txt"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_nanodegree_apps"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <LinearLayout
        android:layout_below="@+id/my_nanodegree_txt"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <Button
        android:layout_margin="@dimen/button_layout_margin"
        android:id="@+id/button_project_1"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:text="@string/filmes_populares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_margin="@dimen/button_layout_margin"
        android:id="@+id/button_project_2"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:text="@string/stock_hawk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="@dimen/button_layout_margin"
        android:id="@+id/button_project_3"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:text="Faça-o maior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="@dimen/button_layout_margin"
        android:id="@+id/button_project_4"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:text="Faça seu aplicativo com Material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_project_5"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:text="Seja onipresente"
        android:layout_margin="@dimen/button_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="@dimen/button_layout_margin"
        android:id="@+id/button_project_6"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:text="Capstone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
